<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxiApp.View.A_R.Avtorization">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="25" BackgroundColor="White">
                <Image Source="" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center"/>
                <StackLayout Margin="10">
                    <Label Text="Email" TextColor="#000000" Margin="4,0,0,0" FontSize="16" VerticalTextAlignment="Start"/>
                    <Entry TextColor="#070719" HeightRequest="46" FontSize="15" Text="{Binding Username}" Placeholder="Enter Email" PlaceholderColor="#D8D8D8"/>
                    <Label Text="Pasword" TextColor="#000000" Margin="4,0,0,0" FontSize="16" VerticalTextAlignment="Start"/>
                    <Entry TextColor="#000000" HeightRequest="46" FontSize="15" IsPassword="True" Text="{Binding Password}" Placeholder="Enter Pasword" PlaceholderColor="#D8D8D8"/>
                    <Button Text="Log in" TextColor="White" BackgroundColor="#000000" Command="{Binding AvtorizationCommand}" CornerRadius="10" FontSize="17"/>
                    <Label Text="{Binding FeedBack}" TextColor="Red" FontSize="11" HorizontalTextAlignment="Center"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>